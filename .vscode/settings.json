{
    // Basic style configuration
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,
    "workbench.startupEditor": "welcomePage",
    "workbench.colorTheme": "SpaceBox Nova",
    "workbench.iconTheme": "material-icon-theme",

    // Fonts configuration
    "editor.fontFamily": "'Cascadia Mono', 'Source Code Pro', 'Ubuntu Mono', 'monospace'",
    "editor.fontSize": 15,
    "editor.fontWeight": "normal",
    "terminal.integrated.fontFamily": "'Cascadia Mono', 'Ubuntu Mono', 'MesloLGS NF', 'monospace'",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontWeight": "normal",

    // Other style configurations
    "editor.cursorBlinking": "phase",
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.minimap.enabled": false,
    "editor.multiCursorPaste": "spread",

    // Themes customizations
    "workbench.colorCustomizations": {
        "[Night Owl (No Italics)]": {
            "activityBar.background": "#000C1D",
            "activityBar.border": "#102a44",
            "editorGroup.border": "#102a44",
            "sideBar.background": "#001122",
            "sideBar.border": "#102a44",
            "sideBar.foreground": "#8BADC1"
        },
        "[Dracula]": {
            "editor.selectionBackground": "#bd93f980",
            "editor.selectionHighlightBackground": "#59595e88"
        }
    },

    // Python configuration
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    // "notebook.formatOnCellExecution": true,
    // "notebook.formatOnSave.enabled": true,
    // "notebook.codeActionsOnSave": {
    //     "notebook.source.fixAll": "explicit",
    //     "notebook.source.organizeImports": "explicit"
    // },

    "ruff.lint.args": [
        "--line-length=88",
        "--extend-select=I",
        "--extend-select=S",
        "--extend-select=B",
        "--extend-select=A",
        "--extend-select=PD",
        "--extend-select=UP",
        "--extend-select=RUF",
        "--fixable=I"
    ],

    // Prettier configuration
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "[yaml][css][javascript][jsonc][json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },

    // IndentRainbow configuration
    "indentRainbow.includedLanguages": ["json", "jsonc", "yaml", "python"],
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 1,
    "indentRainbow.colors": [
        "rgba(255,255,64,0.7)",
        "rgba(127,255,127,0.7)",
        "rgba(255,127,255,0.7)",
        "rgba(79,236,236,0.7)"
    ],

    // Others
    "telemetry.telemetryLevel": "off",
    "jupyter.askForKernelRestart": false,
    "notebook.output.wordWrap": true,
    "extensions.ignoreRecommendations": true
}
